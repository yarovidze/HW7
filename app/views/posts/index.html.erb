<section class="header">
  <div class="container">
    <div class="header-add-btn text-right"><%= link_to 'New Post', new_post_path, class: "btn btn-light" %></div>
    <div class="header-titel"><h1>Simple blog</h1></div>
  </div>
</section>
<div class="container">
  <% @posts.each do |post| %>
    <div class="container">
      <div class="row post-wrap">
        <div class="col-sm bg-light">
          <%= post.title %>
        </div>
        <div class="col-sm autor-post-item">
          <label>Autor by: </label> <%= post.name %>
        </div>
        <div class="col-sm">
          <%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Delete', post, method: :delete, data: {confirm: 'You really want to delete this post?'} %>
        </div>
      </div>
    </div>

  <% end %>
  <br>
</div>
<div class="container">
  <p id="notice"><%= notice %></p>
</div>